      <style>
         body{
            background-color: white;
            background-size: cover;
            
         }
         .col img{
            height: 50px;
         }
         header{
            width: 80rem;
            margin: auto;
            margin-top: 1rem;
            display: flex;
            height: 4rem;
            justify-content: center;
            align-items: center;
            position: relative;
            z-index: 100;
            background-color: transparent;
            box-shadow: 1px 1px 5px black;
            border-radius: 10px;
            }
            header .logo{
            font-weight: bold;
            color: #ffffff;
            font-size: 2rem;
            width: 50%;
            margin-top: 1rem;
            margin-left:2rem;
            text-shadow: rgb(0, 0, 0) 5px 5px 0.5rem;
            margin-top: 2.5rem;
            }
            header .menu{
            width: 100%;
            padding: 0;
            margin: 0;
            list-style: none;
            display: flex;
            justify-content: center;
            gap: 20px;
            font-weight: 500;
            margin-top: 12px;
            }
            header .menu li{
            margin-top: 0.7rem;
            color: #ffffff;
            font-size: 1.2rem;
            text-shadow: rgb(0, 0, 0) 2px 2px 0.2rem;
            cursor: pointer;
            }
            header .menu li:hover{
            color: #01dbc2;
            text-shadow: #01dbc2 5px 5px 0.5rem;
            text-decoration: underline;
            
            }
            header .search{
            width: 20%;
            }
            .card-super-container{
               height: 1000px;
            }
            .trip-container{
               width: 100%;
               height: 1350px;
               display: flex;
               align-items: center;
               justify-content: center;
               flex-wrap: wrap;
               margin-left: 100px;
            }
            .pp{
               width: 80rem;
            
            }

              /*  Card Container  */
              .card{
               width: 300px;
               height: 400px;
               margin: 20px;
               padding: 5px;
                box-shadow: 0.5px 0.5px 10px rgb(97, 97, 97); 
               border-radius: 20px;
               display: flex;
               flex-direction: column;
               align-items: center;
               justify-content: center;
            }
            .card:hover{
              transform: scale(1.05);
               cursor: pointer;
            }
            .card-image img{
               
               width: 300px;
               height: 200px;
               border-radius: 20px;
               overflow: hidden;
               background-position: center;
               background-size: cover;
            }
            .card-content{
               margin-top: 10px;
               width: 100%;
               height: 200px;
               display: flex;
               flex-direction: column;
               align-items: start;
               justify-content: start;
            }
            .card-content-name{
               margin-left: 25px;
               font-size: 20px;
               font-weight: bold;
               color: rgb(0, 0, 0);
            }
            .card-content-address{
               display: flex;
               align-items: center;
               font-size: 15px;
               font-weight: bold;
               color: rgb(68, 68, 68);
            }
            .card-content-address img{
               width: 25px;
               height: 25px;
            }
            .card-content-person{
               display: flex;
               align-items: center;
               font-size: 16px;
               font-weight: bold;
               color: rgb(0, 0, 0);
            }
            .card-content-person img{
               width: 25px;
               height: 25px;
            }
            .card-content-star{
               display: flex;
               align-items: center;
               font-size: 16px;
               font-weight: bold;
               color: rgb(0, 0, 0);
            }
            .card-content-star img{
               width: 25px;
               height: 25px;
            }
            .card-content-button{
               margin-top: 10px;
               display: flex;
               align-items: center;
               justify-content: space-between;
               gap: 20px;
               width: 100%;
            }
            .card-content-button button{
               font-size: 16px;
               font-weight: bold;
               color: white;
               background-color: #01dbc2;
               border: none;
               border-radius: 10px;
               padding: 10px;
            }
            .card-content-button button:hover{
               background-color: #31ab9c;
               cursor: pointer;
            }
            .card-content-button img{
               width: 30px;
               height: 30px;
            }

      </style>
      <title>Places</title>
   </head>
