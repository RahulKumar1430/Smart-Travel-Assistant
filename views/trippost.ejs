        <% places.forEach(function(val){ %>
      <div class="trip-place">
         <% if(i==0){ %>
       <h3>10:00 AM - 12:00 PM</h3>
       <% i=1 %>
       <% } else {%>
         <h3><%= i %>:00 PM - <%= i+2 %>:00 PM</h3>
         <% i=i+3 %>
         <% } %>
       <div class="trip-place-container">
          <img class="trip-place-container-left" src="<%= val.image1 %>" alt="">
          <div class="trip-place-container-right">
             <div>
                <h2 ><%= val.name %></h2>
                <p><%= val.place %></p>
                <p style="margin-top: 10px; font-weight:bold;"><%=val.rating %> Rating</p> 
             </div>
             <div class="trip-place-container-right-button">
                <p><%=val.price_indian %> Per Person</p>
                <a href="./booking/<%= val.name %>"><button>Book Now</button></a>
             </div>
            </div>
            
         </div>
      </div>
      <%    }) %>

